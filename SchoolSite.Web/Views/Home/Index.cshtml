@using Microsoft.Web.Helpers
@using SchoolSite.Web.DAL.Manage
@{
    ViewBag.Title = "赣州中学";
}
@{
    var sliderList =NewsManage.QueryHomeIndexSliderWrapper(5);
}
<script type="text/javascript">
    var j = jQuery.noConflict();
    j(document).ready(function () {
        j('#nivo-slider').nivoSlider();
    });
</script>
<div class="jumbotron">
    <h1>欢迎来到赣州中学</h1>
    <p class="lead">赣州中学</p>
    <p>
        <div class="slider-wrapper theme-default">
            <div id="nivo-slider" class="nivoSlider">
                @foreach (var item in sliderList)
                {
                    <a href="/News/Details/@item.Id" target="_blank">
                        <img src="/Images/SaveUpload/Uploaded/@item.ImageForTitle" alt="" title=@item.Title />
                    </a>
                }
            </div>
        </div>
    </p>
    <p><a href="/Home/" class="btn btn-primary btn-lg">了解更多 &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>为中小企业提供</h2>
        <p>
            公司网站建设和维护，企业ERP软件定制开发和维护。
        </p>
        <p><a class="btn btn-default" href="/Home/WebSiteProductIntro">了解更多 &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>为社会有志青年</h2>
        <p>提供计算机技术培训，主要有电脑基本技能培训和软件件开发培训等。</p>
        <p><a class="btn btn-default" href="/Home/TrainProductIntro">了解更多 &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>为政府机关和事业机构提供</h2>
        <p>定制化软件和网站的设计和开发，以用对产品使用人员的培训。</p>
        <p><a class="btn btn-default" href="/Home/SoftwareProductIntro">了解更多 &raquo;</a></p>
    </div>
</div>

